@model List<Web2BMVC.Entities.Book>

<h1>List of Books</h1>

<a class="btn btn-success" href="create">Create new Book</a>

<table class="table">
    <thead>
        <th>Id</th>
        <th>Name</th>
        <th>Author</th>
        <th></th>
    </thead>
    <tbody>
    @foreach(var book in Model){
        <tr>
            <td>@book.Id</td>
            <td>@book.Name</td>
            <td>@book.Author</td>
            <td>
                <a class="btn btn-warning" href="/new/update/@book.Id">Update</a>
                <a class="btn btn-danger" href="/new/delete/@book.Id">Delete</a>
            </td>
        </tr>
    }
</tbody>
</table>